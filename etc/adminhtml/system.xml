<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="magepulse_central_reporting" translate="label" sortOrder="160" showInDefault="1">
            <class>separator-top</class>
            <label><![CDATA[Central Reporting]]></label>
            <tab>magepulse</tab>
            <resource>MagePulse_Collector::config</resource>
            <group id="general" translate="label" sortOrder="1" showInDefault="1" showInWebsite="1">
                <label><![CDATA[General]]></label>
                <field id="enabled" type="select" translate="label" sortOrder="10" showInDefault="1" showInStore="1" showInWebsite="1">
                    <label>Enable Central Reporting</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="site_license" translate="label comment" type="text" sortOrder="20" showInDefault="1" showInWebsite="1">
                    <label>Site License</label>
                    <validate>required-entry validate-no-empty</validate>
                    <depends>
                        <field id="magepulse_central_reporting/general/enabled">1</field>
                    </depends>
                    <comment>
                        <![CDATA[Enter your site license from domainname.com.]]>
                    </comment>
                </field>
                <field id="public_key" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1">
                    <label>Public Key</label>
                    <attribute type="disabled" default="0">1</attribute>
                    <config_path>magepulse_central_reporting/keys/public_key</config_path>
                    <depends>
                        <field id="magepulse_central_reporting/general/enabled">1</field>
                    </depends>
                    <comment>
                        <![CDATA[This Public Key needs to be added to domainname.com so that we can decrypt your data.]]>
                    </comment>
                </field>
            </group>
        </section>
    </system>
</config>
